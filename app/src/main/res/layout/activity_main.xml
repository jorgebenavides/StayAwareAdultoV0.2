<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="urrutia.benavides.jorge.stayawareadulto.MainActivity">

    <Button
        android:id="@+id/btnconectarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:text="Conectar Dispositivo"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="BIENVENIDO"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnpanicoMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnconectarMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="¡¡¡alerta panico!!! >:c"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/firmware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnpanicoMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="firmware" />

    <TextView
        android:id="@+id/software"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/firmware"
        android:layout_below="@+id/firmware"
        android:layout_marginTop="15dp"
        android:text="software" />
</RelativeLayout>
